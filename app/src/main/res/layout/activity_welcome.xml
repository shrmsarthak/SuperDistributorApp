<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/welcometxtView">

        <TextView
            android:id="@+id/welcometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verifiedicon"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#7D7D7D"
            android:text="Powering Progress, Delivering Excellence"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/verifiedicon"
            android:layout_width="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/welcometxt"
            android:src="@drawable/ic_baseline_verified_24" />


    </LinearLayout>


    <TextView
        android:id="@+id/welcometxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometxtView"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Join us today!"
        android:textColor="#7D7D7D"
        android:textSize="15sp" />


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometxt2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:text="Get Started"
        android:backgroundTint="#324E88"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="615dp" />

    <TextView
        android:id="@+id/head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Empowering the Future with Reliable Energy Solutions"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/head3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7D7D7D"
        android:gravity="center"
        android:text="Finest \u2022 Affordable \u2022 Trusted"
        android:textSize="15dp"
        android:layout_below="@+id/head2"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/head3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="3dp" />
</RelativeLayout>